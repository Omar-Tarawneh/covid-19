<!DOCTYPE html>
<html lang="en">
  <%- include('./layout/head.ejs') %>
  <body>
    <%- include('./layout/header.ejs') %>

    <main class="cards">
      <% if (!covid.length) { %>
      <h1>NO AVAILABLE RECORDS</h1>
      <% } else{%> <% covid.forEach(value => { %>
      <div class="card">
        <h1>Country<%= value.country %></h1>
        <p>Date: <%= value.date %></p>
        <form action="/detail/<%= value.id %> " method="POST">
          <button type="submit">View Details</button>
        </form>
      </div>
      <% })} %>
    </main>

    <%- include('./layout/footer.ejs') %>
  </body>
</html>
